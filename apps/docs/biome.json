{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "extends": ["../../biome.json"],
  "linter": {
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useButtonType": "off",
        "useAltText": "off",
        "noStaticElementInteractions": "off"
      },
      "performance": {
        "noImgElement": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "suspicious": {
        "noTemplateCurlyInString": "off"
      },
      "correctness": {
        "noUnusedVariables": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "components/home/translations.ts",
        "app/*/layout.tsx",
        "components/home/HeroSection.tsx"
      ],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    }
  ],
  "files": {
    "includes": ["!.next", "!.source", "!next-env.d.ts"]
  }
}
